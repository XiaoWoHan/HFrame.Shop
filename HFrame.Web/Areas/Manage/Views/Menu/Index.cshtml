@model List<UIMenu>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>HFrame</title>
    @Styles.Render("~/Css/Main")
    @Scripts.Render("~/Js/Main")
</head>
<body>
    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <a href="@Url.Action("Edit")" class="btn btn-primary pull-right">添加按钮</a>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-header card-header-primary">
                            <h4 class="card-title mt-0"> 按钮管理</h4>
                            <p class="card-category"> 管理后台按钮</p>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead class="text-primary">
                                        <tr>
                                            <th>图标</th>
                                            <th>名称</th>
                                            <th>排序</th>
                                            <th>链接</th>
                                            <th>创造时间</th>
                                            <th>操作</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model != null && Model.Count >= 0)
                                        {
                                            foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        <i class="material-icons">@item.Icon</i>
                                                    </td>
                                                    <td>
                                                        @item.Title
                                                    </td>
                                                    <td>
                                                        @item.Layer
                                                    </td>
                                                    <td>
                                                        @item.Link
                                                    </td>
                                                    <td>
                                                        @item.CreateTime
                                                    </td>
                                                    <td>
                                                        <a href="@Url.Action("Edit",new { OID=item.OID})" class="btn btn-primary pull-right">编辑</a>
                                                        <a href="@Url.Action("Delete",new { OID=item.OID})" class="btn btn-danger pull-right delete">删除</a>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </body>
</html>